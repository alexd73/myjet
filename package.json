{
  "name": "myjet",
  "version": "1.0.0",
  "description": "Standalon conversion scripts",
  "main": "myjet.js",
  "scripts": {
    "start": "tsc && concurrently \"webpack -w\" \"npm run watch-css\" \"lite-server\" ",
    "lint": "tslint ./app/**/*.ts -t verbose",
    "lite": "lite-server",
    "build-css": "node-sass myjet.scss   --output ./",
    "watch-css": "node-sass ./myjet.scss --watch --output ./ --source-map true --source-map-contents sass",
    "postinstall": "typings install",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^2.0.0",
    "css-loader": "^0.23.1",
    "lite-server": "^2.2.0",
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.2",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "typescript": "^1.8.10",
    "typings": "^0.8.1",
    "webpack": "^1.13.1"
  }
}
